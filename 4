#include <iostream>

void calculateArray(int* arr, int size, int* sumPtr, int* productPtr) {
    int sum = 0;
    int product = 1;

    for (int i = 0; i < size; ++i) {
        sum += arr[i];
        product *= arr[i];
    }

    *sumPtr = sum;
    *productPtr = product;
}

int main() {
    const int size = 5;
    int arr[size] = {1, 2, 3, 4, 5};
    int sum, product;

    calculateArray(arr, size, &sum, &product);

    std::cout << "Sum of array elements: " << sum << std::endl;
    std::cout << "Product of array elements: " << product << std::endl;

    return 0;
}
