#include <iostream>

void додати_блок_в_кінець(int*& масив, int& поточний_розмір, int* блок, int розмір_блоку) {
    int новий_розмір = поточний_розмір + розмір_блоку;
    int* новий_масив = new int[новий_розмір];

    for (int і = 0; і < поточний_розмір; ++і) {
        новий_масив[і] = масив[і];
    }

    for (int і = 0; і < розмір_блоку; ++і) {
        новий_масив[поточний_розмір + і] = блок[і];
    }

    delete[] масив;
    масив = новий_масив;
    поточний_розмір = новий_розмір;
}

int main() {
    const int початковий_розмір = 5;
    int* масив = new int[початковий_розмір] {1, 2, 3, 4, 5};
    int поточний_розмір = початковий_розмір;

    int блок_елементів[] = {6, 7, 8};
    int розмір_блоку = sizeof(блок_елементів) / sizeof(int);

    додати_блок_в_кінець(масив, поточний_розмір, блок_елементів, розмір_блоку);

    std::cout << "Новий масив після додавання блоку елементів: ";
    for (int і = 0; і < поточний_розмір; ++і) {
        std::cout << масив[і] << " ";
    }
    std::cout << std::endl;

    delete[] масив;

    return 0;
}
