#include <iostream>

int* findSubset(int* A, int sizeA, int* B, int sizeB) {
    for (int i = 0; i <= sizeA - sizeB; ++i) {
        int j;
        for (j = 0; j < sizeB; ++j) {
            if (A[i + j] != B[j])
                break;
        }
        if (j == sizeB) 
            return &A[i];
    }
    return nullptr; 
}

int main() {
    const int sizeA = 8;
    const int sizeB = 3;
    int A[sizeA] = {1, 2, 3, 4, 5, 6, 7, 8};
    int B[sizeB] = {3, 4, 5};

    int* result = findSubset(A, sizeA, B, sizeB);

    if (result) {
        std::cout << "Subset found at index: " << (result - A) << std::endl;
    } else {
        std::cout << "Subset not found." << std::endl;
    }

    return 0;
}
