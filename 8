#include <iostream>

void додатиБлокЕлементів(int*& масив, int& поточнийРозмір, int* блок, int розмірБлоку) {

    int новийРозмір = поточнийРозмір + розмірБлоку;
    int* новийМасив = new int[новийРозмір];


    for (int i = 0; i < поточнийРозмір; ++i) {
        новийМасив[i] = масив[i];
    }

    for (int i = 0; i < розмірБлоку; ++i) {
        новийМасив[поточнийРозмір + i] = блок[i];
    }


    delete[] масив;
    масив = новийМасив;
    поточнийРозмір = новийРозмір;
}

int main() {
    const int початковийРозмір = 5;
    int* масив = new int[початковийРозмір] {1, 2, 3, 4, 5};
    int поточнийРозмір = початковийРозмір;

    int блокЕлементів[] = {6, 7, 8};
    int розмірБлоку = sizeof(блокЕлементів) / sizeof(int);

    додатиБлокЕлементів(масив, поточнийРозмір, блокЕлементів, розмірБлоку);

    std::cout << "Новий масив після додавання блоку елементів: ";
    for (int i = 0; i < поточнийРозмір; ++i) {
        std::cout << масив[i] << " ";
    }
    std::cout << std::endl;


    delete[] масив;

    return 0;
}
