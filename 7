#include <iostream>

int* видалитиВідємні(int* масив, int розмір, int& новийРозмір) {
    int кількість = 0;


    for (int i = 0; i < розмір; ++i) {
        if (масив[i] >= 0) {
            кількість++;
        }
    }


    int* новийМасив = new int[кількість];
    int індекс = 0;

  
    for (int i = 0; i < розмір; ++i) {
        if (масив[i] >= 0) {
            новийМасив[індекс++] = масив[i];
        }
    }

    новийРозмір = кількість; 
    return новийМасив;       
}

int main() {
    const int розмір = 7;
    int масив[розмір] = {3, -5, 1, -2, 0, 7, -4};
    int новийРозмір;

    int* результат = видалитиВідємні(масив, розмір, новийРозмір);

    std::cout << "Новий масив після видалення від'ємних: ";
    for (int i = 0; i < новийРозмір; ++i) {
        std::cout << результат[i] << " ";
    }
    std::cout << std::endl;


    delete[] результат;

    return 0;
}
